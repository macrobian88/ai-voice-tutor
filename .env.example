# Application
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000

# API Keys
OPENAI_API_KEY=sk-...
ANTHROPIC_API_KEY=sk-ant-...

# Database
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/ai-voice-tutor?retryWrites=true&w=majority
MONGODB_DB_NAME=ai-voice-tutor

# Redis Cache (Upstash)
REDIS_URL=redis://...
REDIS_TOKEN=...

# Cloudflare R2 Storage
R2_ACCOUNT_ID=...
R2_ACCESS_KEY_ID=...
R2_SECRET_ACCESS_KEY=...
R2_BUCKET_NAME=ai-voice-tutor-audio
R2_PUBLIC_URL=https://...

# AWS (for Lambda deployment)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=...
AWS_SECRET_ACCESS_KEY=...

# JWT Secret
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Cost Optimization
ENABLE_PROMPT_CACHING=true
ENABLE_TTS_CACHING=true
ENABLE_VAD=false
ENABLE_TIERED_ROUTING=false

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Monitoring
SENTRY_DSN=...
LOG_LEVEL=info

# Pricing
NEXT_PUBLIC_FOUNDER_PRICE=19.00
NEXT_PUBLIC_PLUS_PRICE=24.99
NEXT_PUBLIC_PRO_PRICE=39.99
NEXT_PUBLIC_FREE_SESSIONS=5

# Feature Flags
NEXT_PUBLIC_ENABLE_SIGNUP=true
NEXT_PUBLIC_ENABLE_FREE_TIER=true
NEXT_PUBLIC_ENABLE_HD_VOICES=false

# Stripe (for payments)
STRIPE_SECRET_KEY=sk_test_...
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# Analytics
NEXT_PUBLIC_ANALYTICS_ID=...
